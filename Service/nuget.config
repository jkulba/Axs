<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <packageSources>
        <add key="nuget.org"
             value="https://api.nuget.org/v3/index.json"
             protocolVersion="3" />
        <add key="github"
             value="https://nuget.pkg.github.com/jkulba/index.json"
             protocolVersion="3" />
    </packageSources>
    <packageSourceMapping>
        <!-- Map Microsoft and most common NuGet packages to nuget.org -->
        <packageSource key="nuget.org">
            <package pattern="Microsoft.*" />
            <package pattern="System.*" />
            <package pattern="Swashbuckle.*" />
            <package pattern="AutoMapper*" />
            <package pattern="FluentValidation*" />
            <package pattern="MediatR*" />
            <package pattern="Serilog*" />
            <package pattern="xunit*" />
            <package pattern="FluentAssertions*" />
            <package pattern="Moq*" />
            <package pattern="Newtonsoft.*" />
            <package pattern="EntityFramework*" />
            <package pattern="*" />
        </packageSource>
        <!-- Map your custom/private packages to GitHub -->
        <packageSource key="github">
            <package pattern="Axs.*" />
            <package pattern="jkulba.*" />
            <!-- Add any other private package patterns here -->
        </packageSource>
    </packageSourceMapping>
    <packageSourceCredentials>
        <github>
            <add key="Username"
                 value="jkulba" />
            <add key="ClearTextPassword"
                 value="%GITHUB_TOKEN%" />
        </github>
    </packageSourceCredentials>
</configuration>